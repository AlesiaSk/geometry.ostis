sc_agent_of_finding_constants
=> nrel_main_idtf:
	[sc-агент поиска понятий, на основе которых определяется заданное понятие] (* <- lang_ru;; *);
	[sc-agent of finding concepts, on base of which given concept is defined] (* <- lang_en;; *);

<- abstract_sc_agent;

=> nrel_primary_initiation_condition: 
	(sc_event_add_output_arc => question_initiated);

=> nrel_initiation_condition_and_result: 
	(..sc_agent_of_finding_constants_condition => ..sc_agent_of_finding_constants_result);

<= nrel_sc_agent_key_sc_elements: 
	{
	question_initiated;
	question;
	question_of_finding_constants
	};

<- rrel_key_sc_element:
	...
	(*
	<- sc_description_of_sc_agent_behavior;;
	<= nrel_sc_text_translation:
		...
		(*
		-> rrel_example:
			"file://Agent_Constants.html";;
		*);;
	*);

<- rrel_key_sc_element:
	...
	(*
	<- sc_illustration;;
	<= nrel_sc_text_translation:
		...
		(*
		-> rrel_example:
			"file://constants.png";;
		*);;
	*);

=> nrel_inclusion: 
	...
	(*
	<- platform_independent_abstract_sc_agent;;
	<= nrel_sc_agent_program: 
		{
		agent_of_finding_constants;
		proc_finding_constants  
		};;
	-> sc_agent_of_finding_constants_scp    
		(*
		<- active_sc_agent;; 
		*);; 
	*);;

..sc_agent_of_finding_constants_condition
= [*
	question_of_finding_constants _-> .._question;;
	question_initiated _-> .._question;;
	question _-> .._question;;
	.._question _-> .._parameter;;
*];;

..sc_agent_of_finding_constants_result
= [*
	question_of_finding_constants _-> .._question;;
	question_finished _-> .._question;;
	question _-> .._question;;
	.._question _=> nrel_answer:: .._answer;;
	.._question _-> .._parameter;;
*];;
